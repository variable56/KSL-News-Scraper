<nav class="navbar navbar-light bg-light">
  <form class="form-inline">
    <button id="scrape" class="btn btn-outline-primary my-2 my-sm-0" type="submit">Get Scrapin!</button>
    <button id="deleteArticles" class="btn btn-outline-primary my-2 my-sm-0" type="submit">Get Deletin!</button>
  </form>
</nav>
<div id="wrapper">
  <h1>KSL Article Scraper</h1>
  <h2><i>Scrape your favorite articles and leave comments</i></h2>
  <div id="articles"></div>
  <div id="notes"></div>
</div>

<ul class="list-group container">
  {{#each this.article}}
  <p class="list-group-item"><a href={{this.link}}>{{this.title}}</a>


    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal{{this._id}}">
      Leave Note
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal{{this._id}}" tabindex="-1" role="dialog"
      aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">{{this.title}}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">Leave Note Here:</span>
              </div>
              <textarea class="form-control" aria-label="With textarea"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button id="notesButton" type="button" class="btn btn-primary">Save to Article</button>
          </div>
        </div>
      </div>
    </div>

  </p>
  {{/each}}
</ul>